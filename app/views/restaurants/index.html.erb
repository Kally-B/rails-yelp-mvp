<%= render "navbar" %>
<div class="container">
  <h1>Restaurant List</h1>

  <% @restaurants.each do |r| %>
  <p><i class="fas fa-utensil-spoon"></i> <%= link_to r.name, restaurant_path(r) %> <em>(<%= r.category %>)</em></p>
  <% end %>

<%= link_to "Add a restaurant", new_restaurant_path, class: "btn btn-primary" %>

</div>
